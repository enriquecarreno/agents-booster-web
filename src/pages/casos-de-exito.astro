                    <CheckCircle className="w-5 h-5 text-success" />
                    <span>Después: Los Resultados</span>
                  </h3>
                  <div class="resultados-grid">
                    {caso.resultados.map(resultado => (
                      <div class="resultado-item">
                        <span class="resultado-metrica">{resultado.metrica}</span>
                        <span class="resultado-desc">{resultado.descripcion}</span>
