            <button class="filtro-btn" data-filter="ecommerce">E-commerce</button>
            <button class="filtro-btn" data-filter="saas">SaaS</button>
            <button class="filtro-btn" data-filter="manufacturing">Manufactura</button>
            <button class="filtro-btn" data-filter="b2b">B2B</button>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Casos Grid -->
    <section class="casos-section">
      <div class="ab-container">
        {casos.map((caso, index) => {
          const LogoIcon = caso.logo;
          return (
            <div class="caso-card" data-index={index}>
              <div class="caso-header">
                <div class="caso-logo">
                  <LogoIcon className="w-10 h-10 text-gold-primary" />
                </div>
                <div class="caso-meta">
                  <h2 class="caso-empresa">{caso.empresa}</h2>
                  <div class="caso-info">
                    <span class="caso-industria">{caso.industria}</span>
                    <span class="caso-separator">•</span>
                    <span class="caso-pais">{caso.pais}</span>
                    <span class="caso-separator">•</span>
                    <span class="caso-tamano">{caso.tamano}</span>
