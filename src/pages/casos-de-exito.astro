        <h2 class="section-title">Empresas que Confían en Agents Booster</h2>
        <p class="section-subtitle">Más de 150 empresas en 8 países de LATAM</p>
        
        <div class="logos-grid">
          {Array.from({length: 24}).map((_, i) => (
            <div class="logo-placeholder">
              <span class="logo-text">Cliente {i + 1}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- CTA Final -->
    <section class="cta-section">
      <div class="ab-container">
        <div class="cta-card">
          <h2 class="cta-title">¿Quieres Resultados Como Estos?</h2>
          <p class="cta-description">
            Agenda una demo de 30 minutos y te mostramos casos similares a tu industria.
          </p>
          <div class="cta-buttons">
            <a href="/demo" class="btn btn-primary btn-lg">
              <span>Agendar Demo Gratis</span>
              <ArrowRight className="inline-block w-5 h-5 ml-2" />
            </a>
            <a href="/planes" class="btn btn-secondary btn-lg">
              <span>Ver Planes y Precios</span>
            </a>
          </div>
        </div>
      </div>
    </section>
    
  </div>
  
  <Footer />
</MainLayout>

