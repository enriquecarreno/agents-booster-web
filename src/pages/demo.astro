---
/**
 * DEMO PAGE - Conexión con Backend Real
 * iframe a app.agentsbooster.com/demo
 */

import MainLayout from '../layouts/Main.astro';
import Navbar from '../components/global/Navbar.astro';
import Footer from '../components/global/Footer.astro';
import DeepSpaceBackground from '../components/home/DeepSpaceBackground.astro';
---

<MainLayout 
  title="Demo - Habla con Diego | Agents Booster"
  description="Chatea en vivo con Diego, nuestro agente de ventas de IA. Experimenta cómo Agents Booster puede ayudarte."
>
  <Navbar />

  <div class="demo-page">
    <DeepSpaceBackground />
    
    <div class="demo-container">
      <div class="demo-header">
        <h1>Habla con Diego en Vivo</h1>
        <p>Nuestro agente de ventas de IA está listo para responder todas tus preguntas</p>
      </div>

      <!-- Agents Booster – Demo en vivo (iframe) -->
      <iframe
        src="https://app.agentsbooster.com/demo"
        style="width: 100%; height: 640px; border: none; border-radius: 16px; overflow: hidden;"
        allow="clipboard-read; clipboard-write"
        title="Demo en vivo - Agente de Ventas"
      ></iframe>

      <div class="demo-footer">
        <p>
          ¿Listo para implementar tu propio agente? 
          <a href="/contacto">Agenda una demo personalizada →</a>
        </p>
      </div>
    </div>
  </div>

  <Footer />
</MainLayout>

<style>
  .demo-page {
    position: relative;
    min-height: 100vh;
    padding: 120px 0 80px 0;
  }

  .demo-container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .demo-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .demo-header h1 {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 16px;
  }

  .demo-header p {
    font-size: clamp(16px, 2.5vw, 20px);
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
  }

  .demo-footer {
    text-align: center;
    padding: 32px;
    background: rgba(200, 152, 40, 0.08);
    border: 1px solid rgba(200, 152, 40, 0.2);
    border-radius: 16px;
    margin-top: 48px;
  }

  .demo-footer p {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .demo-footer a {
    color: #C89828;
    font-weight: 700;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .demo-footer a:hover {
    color: #FFD700;
  }

  @media (max-width: 768px) {
    .demo-page {
      padding: 100px 0 60px 0;
    }

    .demo-header {
      margin-bottom: 32px;
    }

    .demo-footer {
      padding: 24px 20px;
      margin-top: 32px;
    }

    .demo-footer p {
      font-size: 14px;
    }
  }
</style>
