---
/**
 * AGENTE DE VENTAS - Página Detallada
 * Estructura completa con todos los bloques
 */

import MainLayout from '../../layouts/Main.astro';
import Navbar from '../../components/global/Navbar.astro';
import Footer from '../../components/global/Footer.astro';
import { SALES_AGENT } from '../../lib/agents-data';
import { baseUrl } from '../../lib/base-url';
import ExpansionPacksSelector from '../../components/agents/ExpansionPacksSelector';
import { MessageCircle, Smartphone, BarChart3, CreditCard, DollarSign, ShoppingCart, Sparkles } from 'lucide-react';

// Expansion Packs Details
const expansionDetails = {
  'interactions-500': {
    id: 'interactions-500',
    name: '+500 conversaciones',
    price: 9,
    setup: 0,
    shortDesc: 'Interacciones adicionales por mes',
    fullDesc: 'Pack adicional de 500 conversaciones mensuales para cuando tu agente necesite más capacidad.',
    whatItDoes: [
      'Aumenta tu límite mensual en 500 interacciones',
      'Sin cambios en funcionalidad ni features',
      'Se renueva automáticamente cada mes',
      'Puedes contratar múltiples packs'
    ],
    bestFor: 'Negocios con picos estacionales o en crecimiento acelerado que superan su límite base.',
    icon: MessageCircle
  },
  'interactions-2000': {
    id: 'interactions-2000',
    name: '+2,000 conversaciones',
    price: 29,
    setup: 0,
    shortDesc: 'Pack de interacciones para alto volumen',
    fullDesc: 'Pack de 2,000 conversaciones adicionales al mes. Mejor costo por interacción para alto tráfico.',
    whatItDoes: [
      'Aumenta tu límite en 2,000 interacciones mensuales',
      'Mejor precio por conversación que el pack de 500',
      'Ideal para negocios con tráfico consistente',
      'Se renueva automáticamente cada mes'
    ],
    bestFor: 'Negocios con volumen estable y alto tráfico que necesitan más capacidad.',
    icon: MessageCircle
  },
  'channel': {
    id: 'channel',
    name: 'Canal adicional',
    price: 10,
    setup: 50,
    shortDesc: 'WhatsApp, Instagram, Messenger, etc.',
    fullDesc: 'Agrega un canal de comunicación adicional donde tu agente puede atender clientes.',
    whatItDoes: [
      'Conecta un canal extra (WhatsApp, Instagram, FB Messenger, Telegram, etc.)',
      'El agente mantiene contexto entre canales',
      'Dashboard unificado para todos los canales',
      'Configuración y training en el canal nuevo'
    ],
    bestFor: 'Negocios omnicanal que atienden clientes en múltiples plataformas.',
    icon: Smartphone
  },
  'data-connector-basic': {
    id: 'data-connector-basic',
    name: 'Data Connector Basic',
    price: 19,
    setup: 100,
    shortDesc: 'Sheets/CSV sync',
    fullDesc: 'Sincronización bidireccional con Google Sheets o archivos CSV para gestionar tu catálogo y data.',
    whatItDoes: [
      'Sync automático con Google Sheets',
      'Importación/exportación de CSV',
      'Actualización de catálogo en tiempo real',
      'Registro de conversaciones en sheets'
    ],
    bestFor: 'Emprendedores que usan Sheets como "mini-ERP" y necesitan sincronización simple.',
    icon: BarChart3
  },
  'data-connector-payments': {
    id: 'data-connector-payments',
    name: 'Data Connector Payments',
    price: 19,
    setup: 150,
    shortDesc: 'Integración con pasarelas de pago',
    fullDesc: 'Conecta con Stripe, PayPal, Kushki, PayPhone u otras pasarelas para generar links de pago automáticamente.',
    whatItDoes: [
      'Integración con tu pasarela de pago',
      'Generación automática de links de pago',
      'Tracking de pagos completados',
      'Notificaciones de pago recibido'
    ],
    bestFor: 'Negocios que quieren que el agente cierre ventas generando links de pago directos.',
    icon: CreditCard
  },
};
---

<MainLayout 
  title={`${SALES_AGENT.name} - Agents Booster`}
  description={SALES_AGENT.description}
>
  <Navbar />

  <!-- HERO SECTION -->
  <section class="section agent-hero-section">
    <div class="ab-container">
      <div style="max-width: 800px; margin: 0 auto; text-align: center;">
        <div style="display: flex; align-items: center; justify-content: center; width: 80px; height: 80px; margin: 0 auto 24px; background: rgba(200, 152, 40, 0.1); border-radius: 20px;">
          <ShoppingCart className="w-12 h-12 text-gold-primary" />
        </div>
        <h1 class="text-gradient-gold" style="margin-bottom: 24px;">
          {SALES_AGENT.name}
        </h1>
        <p style="font-size: 24px; color: rgba(255, 255, 255, 0.8); margin-bottom: 32px; line-height: 1.4;">
          {SALES_AGENT.tagline}
        </p>
        <p style="font-size: 18px; color: rgba(255, 255, 255, 0.7); margin-bottom: 48px; line-height: 1.6;">
          {SALES_AGENT.description}
        </p>

        <!-- Metrics -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 24px; margin-bottom: 48px;">
          {SALES_AGENT.metrics.map((metric) => (
            <div class="ab-card" style="padding: 24px; text-align: center;">
              <div style="font-size: 36px; font-weight: 900; color: #C89828; margin-bottom: 8px;">
                {metric.value}
              </div>
              <div style="font-size: 14px; color: rgba(255, 255, 255, 0.7); font-weight: 600;">
                {metric.label}
              </div>
            </div>
          ))}
        </div>

        <!-- CTAs -->
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href={`${baseUrl}/demo`} class="btn btn-primary btn-lg">
            Ver Demo del Agente
          </a>
          <a href="#pricing" class="btn btn-secondary btn-lg">
            Ver Planes y Precios
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- PAIN POINTS -->
  {SALES_AGENT.painPoints && (
    <section class="section-sm">
      <div class="ab-container">
        <div class="section-header">
          <h2>¿Por qué necesitas este agente?</h2>
          <p class="section-subtitle">
            Estos son los problemas que tu equipo de ventas enfrenta cada día
          </p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px;">
          {SALES_AGENT.painPoints.map((pain) => (
            <div class="ab-card" style="padding: 28px;">
              <h3 style="font-size: 20px; font-weight: 700; color: #FFFFFF; margin-bottom: 16px; line-height: 1.3;">
                {pain.title}
              </h3>
              <p style="font-size: 15px; color: rgba(255, 255, 255, 0.8); margin-bottom: 12px; line-height: 1.5;">
                <strong>Problema:</strong> {pain.problem}
              </p>
              <p style="font-size: 15px; color: #C89828; font-weight: 700; margin: 0;">
                <DollarSign className="inline-block w-4 h-4 mr-1" />
                {pain.cost}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- SOLUTIONS -->
  {SALES_AGENT.solutions && (
    <section class="section-sm" style="background: rgba(200, 152, 40, 0.03);">
      <div class="ab-container">
        <div class="section-header">
          <h2>¿Cómo lo resuelve el agente?</h2>
          <p class="section-subtitle">
            Soluciones inteligentes que automatizan tu proceso de ventas
          </p>
        </div>

        <div style="display: grid; gap: 32px; max-width: 900px; margin: 0 auto;">
          {SALES_AGENT.solutions.map((solution, index) => (
            <div class="ab-card" style="padding: 36px;">
              <div style="display: flex; align-items: flex-start; gap: 20px; margin-bottom: 20px;">
                <div style="font-size: 48px; flex-shrink: 0; line-height: 1; color: #C89828; font-weight: 900;">
                  {index + 1}
                </div>
                <div>
                  <h3 style="font-size: 24px; font-weight: 800; color: #FFFFFF; margin-bottom: 12px;">
                    {solution.title}
                  </h3>
                  <p style="font-size: 16px; color: rgba(255, 255, 255, 0.8); margin: 0; line-height: 1.6;">
                    {solution.description}
                  </p>
                </div>
              </div>
              <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 12px;">
                {solution.bullets.map((bullet) => (
                  <li style="display: flex; align-items: flex-start; gap: 12px; font-size: 15px; color: rgba(255, 255, 255, 0.9); line-height: 1.5;">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" style="flex-shrink: 0; margin-top: 2px;">
                      <path d="M7 10L9 12L13 8" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="10" cy="10" r="8" stroke="#00FF88" stroke-width="1.5"/>
                    </svg>
                    <span>{bullet}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- USE CASES -->
  {SALES_AGENT.useCases && (
    <section class="section-sm">
      <div class="ab-container">
        <div class="section-header">
          <h2>Casos de uso reales</h2>
          <p class="section-subtitle">
            Cómo empresas como la tuya usan el agente de ventas
          </p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 24px;">
          {SALES_AGENT.useCases.map((useCase) => (
            <div class="ab-card" style="padding: 32px;">
              <div style="font-size: 48px; margin-bottom: 20px; line-height: 1;">
                {useCase.icon}
              </div>
              <h3 style="font-size: 20px; font-weight: 700; color: #C89828; margin-bottom: 16px;">
                {useCase.industry}
              </h3>
              <p style="font-size: 15px; color: rgba(255, 255, 255, 0.8); margin-bottom: 16px; line-height: 1.5;">
                <strong>Uso:</strong> {useCase.use}
              </p>
              <p style="font-size: 15px; color: #00FF88; font-weight: 700; margin: 0; line-height: 1.5;">
                <BarChart3 className="inline-block w-4 h-4 mr-1" />
                {useCase.impact}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- PRICING -->
  <section class="section" id="pricing" style="background: rgba(8, 8, 24, 0.6);">
    <div class="ab-container">
      <div class="section-header">
        <h2>Planes y Precios</h2>
        <p class="section-subtitle">
          Elige el nivel que mejor se adapte a tu negocio
        </p>
      </div>

      <div class="pricing-grid">
        {SALES_AGENT.levels && SALES_AGENT.levels.map((level) => (
          <div class={`pricing-card ${level.popular ? 'pricing-card-popular' : ''} ${level.isCustom ? 'pricing-card-custom' : ''}`}>
            {level.popular && (
              <div class="popular-badge">Más Popular</div>
            )}

            <div class="pricing-header">
              <h3 class="pricing-name">{level.name}</h3>
              <p class="pricing-tagline">{level.tagline}</p>
            </div>

            <div class="pricing-price">
              {level.price !== null ? (
                <>
                  <span class="price-currency">$</span>
                  <span class="price-amount">{level.price}</span>
                  <span class="price-period">/mes</span>
                </>
              ) : (
                <span class="price-custom">Bajo cotización</span>
              )}
            </div>

            {level.setup !== null && (
              <div class="pricing-setup">
                <span class="setup-label">Setup inicial:</span>
                <span class="setup-value">${level.setup}</span>
                <span class="setup-free">
                  GRATIS por tiempo limitado
                  <Sparkles className="inline-block w-4 h-4 ml-1" />
                </span>
              </div>
            )}

            {typeof level.interactions === 'number' && (
              <div class="pricing-interactions">
                <MessageCircle className="inline-block w-5 h-5 mr-2" />
                <span>{level.interactions.toLocaleString()} conversaciones/mes</span>
              </div>
            )}
            {typeof level.interactions === 'string' && (
              <div class="pricing-interactions">
                <MessageCircle className="inline-block w-5 h-5 mr-2" />
                <span>{level.interactions}</span>
              </div>
            )}

            <ul class="pricing-features">
              {level.features.map((feature) => (
                <li>
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M7 10L9 12L13 8" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <circle cx="10" cy="10" r="8" stroke="#00FF88" stroke-width="1.5"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            {level.isCustom ? (
              <a href={`${baseUrl}/contacto`} class="pricing-btn btn-primary">
                Solicitar Cotización
              </a>
            ) : (
              <a href={`${baseUrl}/demo`} class="pricing-btn btn-primary">
                Solicitar Demo
              </a>
            )}
          </div>
        ))}
      </div>

      <!-- Expansion Packs -->
      {SALES_AGENT.levels && SALES_AGENT.addons && (
        <ExpansionPacksSelector 
          client:load
          levels={SALES_AGENT.levels.filter(l => !l.isCustom)}
          addons={SALES_AGENT.addons}
          expansionDetails={expansionDetails}
        />
      )}
    </div>
  </section>

  <!-- FAQs -->
  {SALES_AGENT.faqs && (
    <section class="section-sm">
      <div class="ab-container">
        <div class="section-header">
          <h2>Preguntas Frecuentes</h2>
          <p class="section-subtitle">
            Todo lo que necesitas saber sobre el {SALES_AGENT.name}
          </p>
        </div>

        <div style="max-width: 800px; margin: 0 auto; display: flex; flex-direction: column; gap: 20px;">
          {SALES_AGENT.faqs.map((faq) => (
            <div class="ab-card" style="padding: 28px;">
              <h3 style="font-size: 18px; font-weight: 700; color: #C89828; margin-bottom: 12px; line-height: 1.4;">
                {faq.question}
              </h3>
              <p style="font-size: 16px; color: rgba(255, 255, 255, 0.8); margin: 0; line-height: 1.6;">
                {faq.answer}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FINAL CTA -->
  <section class="section" style="background: rgba(200, 152, 40, 0.03); text-align: center;">
    <div class="ab-container">
      <div style="max-width: 700px; margin: 0 auto;">
        <h2 style="font-size: 40px; margin-bottom: 24px;">
          ¿Listo para transformar tus ventas?
        </h2>
        <p style="font-size: 20px; color: rgba(255, 255, 255, 0.8); margin-bottom: 40px; line-height: 1.6;">
          Agenda una demo personalizada y descubre cómo el {SALES_AGENT.name} puede aumentar tus conversiones
        </p>
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href={`${baseUrl}/demo`} class="btn btn-primary btn-lg">
            Agendar Demo Gratis
          </a>
          <a href={`${baseUrl}/contacto`} class="btn btn-secondary btn-lg">
            Hablar con un Experto
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }
</style>
