---
/**
 * AGENTE PERSONALIZADO - Página completa
 * Enfoque: Enterprise, Personalización 100%, Soluciones Custom
 */

import MainLayout from '../../layouts/Main.astro';
import Navbar from '../../components/global/Navbar.astro';
import Footer from '../../components/global/Footer.astro';
import { CUSTOM_AGENT } from '../../lib/agents-data';
import { baseUrl } from '../../lib/base-url';
import { Settings, AlertTriangle, Target, Lightbulb, Rocket, ArrowRight, ChevronDown } from 'lucide-react';

const agent = CUSTOM_AGENT;
---

<MainLayout
  title={`${agent.name} - Agents Booster`}
  description={agent.description}
>
  <Navbar />

  <!-- NIVEL 1: HERO -->
  <section class="agent-hero">
    <div class="ab-container">
      <div style="display: flex; align-items: center; justify-content: center; width: 80px; height: 80px; margin: 0 auto 24px; background: rgba(200, 152, 40, 0.1); border-radius: 20px;">
        <Settings className="w-12 h-12 text-gold-primary" />
      </div>
      <div class="hero-content">
        <div class="hero-badge">
          <Settings className="badge-icon w-4 h-4" />
          <span>Solución a medida</span>
        </div>

        <div class="hero-icon">{agent.icon}</div>

        <h1 class="hero-title">{agent.name}</h1>
        <p class="hero-tagline">{agent.tagline}</p>
        <p class="hero-description">{agent.description}</p>

        <div class="hero-metrics">
          {agent.metrics.map((metric) => (
            <div class="metric-card">
              <div class="metric-value">{metric.value}</div>
              <div class="metric-label">{metric.label}</div>
            </div>
          ))}
        </div>

        <div class="hero-cta-box">
          <p class="cta-box-title">¿Tienes un proceso único que necesita automatización?</p>
          <p class="cta-box-text">Cuéntanos tu necesidad y diseñamos el agente perfecto para ti</p>
          <a href={`${baseUrl}/contacto`} class="btn btn-primary btn-lg">
            Agendar consultoría gratuita
            <ArrowRight className="inline-block w-5 h-5 ml-2" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- NIVEL 2: PAIN POINTS -->
  <section class="agent-section pain-section">
    <div class="ab-container">
      <div class="section-header">
        <h2 class="section-title">
          ¿Los agentes estándar <span class="text-gradient-gold">no cubren tu necesidad?</span>
        </h2>
        <p class="section-subtitle">
          Situaciones donde un Agente Personalizado es la mejor opción
        </p>
      </div>

      <div class="pain-grid-custom">
        {agent.painPoints?.map((pain) => (
          <div class="pain-card">
            <h3 class="pain-title">{pain.title}</h3>
            <p class="pain-problem">{pain.problem}</p>
            <div class="pain-cost">
              <AlertTriangle className="cost-icon w-5 h-5 text-warning" />
              <span class="cost-value">{pain.cost}</span>
            </div>
          </div>
        ))}
      </div>

      <div class="pain-cta">
        <p class="cta-text">Si tu negocio tiene procesos únicos, hablemos.</p>
        <a href={`${baseUrl}/contacto`} class="btn btn-primary">
          Contarnos tu caso
        </a>
      </div>
    </div>
  </section>

  <!-- NIVEL 3: SOLUCIONES -->
  <section class="agent-section solutions-section">
    <div class="ab-container">
      <div class="section-header">
        <h2 class="section-title">
          Cómo construimos tu <span class="text-gradient-gold">Agente Personalizado</span>
        </h2>
        <p class="section-subtitle">
          Proceso de diseño, entrenamiento y despliegue 100% a tu medida
        </p>
      </div>

      <div class="solutions-list">
        {agent.solutions?.map((solution, index) => (
          <div class="solution-card">
            <div class="solution-number">{(index + 1).toString().padStart(2, '0')}</div>
            <div class="solution-content">
              <h3 class="solution-title">{solution.title}</h3>
              <p class="solution-description">{solution.description}</p>
              <ul class="solution-bullets">
                {solution.bullets.map((bullet) => (
                  <li>
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M7 10L9 12L13 8" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="10" cy="10" r="8" stroke="#00FF88" stroke-width="1.5"/>
                    </svg>
                    <span>{bullet}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>

      <!-- Timeline -->
      <div class="timeline-section">
        <h3 class="timeline-title">Timeline típico de implementación</h3>
        <div class="timeline">
          <div class="timeline-item">
            <div class="timeline-marker">1</div>
            <div class="timeline-content">
              <h4>Semanas 1-2: Discovery & Diseño</h4>
              <p>Entendemos tus procesos, definimos requerimientos y diseñamos el agente ideal</p>
            </div>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">2</div>
            <div class="timeline-content">
              <h4>Semanas 3-6: Desarrollo & Entrenamiento</h4>
              <p>Construimos el agente, integramos sistemas y entrenamos con tus datos</p>
            </div>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">3</div>
            <div class="timeline-content">
              <h4>Semanas 7-8: Testing & Refinamiento</h4>
              <p>Pruebas exhaustivas, ajustes basados en feedback y preparación para go-live</p>
            </div>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">4</div>
            <div class="timeline-content">
              <h4>Semana 9+: Go-Live & Soporte</h4>
              <p>Despliegue en producción, onboarding del equipo y soporte continuo</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- NIVEL 4: CASOS DE USO -->
  <section class="agent-section use-cases-section">
    <div class="ab-container">
      <div class="section-header">
        <h2 class="section-title">
          Ejemplos de <span class="text-gradient-gold">Agentes Personalizados</span>
        </h2>
        <p class="section-subtitle">
          Casos reales donde hemos construido soluciones custom
        </p>
      </div>

      <div class="use-cases-grid-custom">
        {agent.useCases?.map((useCase) => (
          <div class="use-case-card-large">
            <div class="use-case-header">
              <div class="use-case-icon">{useCase.icon}</div>
              <h3 class="use-case-industry">{useCase.industry}</h3>
            </div>
            <p class="use-case-description">{useCase.use}</p>
            <div class="use-case-impact">
              <Target className="impact-icon w-5 h-5 text-success" />
              <span class="impact-value">{useCase.impact}</span>
            </div>
          </div>
        ))}
      </div>

      <div class="use-cases-cta">
        <div class="cta-box">
          <h3>¿No ves tu caso aquí?</h3>
          <p>Cada agente personalizado es único. Si tienes un proceso específico que necesita automatización, hablemos. No hay límites técnicos.</p>
          <a href={`${baseUrl}/contacto`} class="btn btn-primary">
            Contarnos tu caso específico
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- NIVEL 5: PRICING -->
  <section class="agent-section pricing-section">
    <div class="ab-container">
      <div class="section-header">
        <h2 class="section-title">
          Inversión en tu <span class="text-gradient-gold">Agente Personalizado</span>
        </h2>
        <p class="section-subtitle">
          Precios transparentes según nivel de complejidad. Todo incluido, sin sorpresas.
        </p>
      </div>

      <div class="pricing-grid-custom">
        {agent.levels?.map((level) => (
          <div class={`pricing-card ${level.popular ? 'pricing-card-popular' : ''} ${level.isCustom ? 'pricing-card-custom' : ''}`}>
            {level.popular && <div class="popular-badge">Más común</div>}
            
            <div class="pricing-header">
              <h3 class="pricing-name">{level.name}</h3>
              <p class="pricing-tagline">{level.tagline}</p>
            </div>

            <div class="pricing-price">
              {level.price !== null ? (
                <>
                  <span class="price-currency">$</span>
                  <span class="price-amount">{level.price}</span>
                  <span class="price-period">/mes</span>
                </>
              ) : (
                <span class="price-custom">Según requerimientos</span>
              )}
            </div>

            {level.setup !== null && (
              <div class="pricing-setup">
                <span class="setup-label">Setup & Desarrollo:</span>
                <span class="setup-value">${level.setup} una vez</span>
              </div>
            )}

            {level.setup === null && (
              <div class="pricing-setup-custom">
                <span class="setup-label">Setup & Desarrollo:</span>
                <span class="setup-custom">Cotización personalizada</span>
              </div>
            )}

            <div class="pricing-interactions">
              <Lightbulb className="interactions-icon w-5 h-5 text-gold-primary" />
              <span>{level.interactions}</span>
            </div>

            <ul class="pricing-features">
              {level.features.map((feature) => (
                <li>
                  <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                    <path d="M6 9L8 11L12 7" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <a 
              href={`${baseUrl}/contacto?plan=${level.id}`}
              class={`pricing-btn ${level.popular ? 'btn-primary' : 'btn-secondary'}`}
            >
              {level.isCustom ? 'Agendar consultoría' : 'Solicitar cotización'}
            </a>
          </div>
        ))}
      </div>

      <!-- Pricing Note -->
      <div class="pricing-note">
        <Lightbulb className="note-icon w-9 h-9 text-info" />
        <div class="note-content">
          <h4>¿Cómo determinamos el precio?</h4>
          <p>El costo final depende de: complejidad del proceso, número de integraciones, volumen de datos, requerimientos de SLA y necesidad de infraestructura dedicada. En la consultoría inicial te daremos un presupuesto preciso.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- NIVEL 6: FAQ -->
  <section class="agent-section faq-section">
    <div class="ab-container">
      <div class="section-header">
        <h2 class="section-title">
          Preguntas <span class="text-gradient-gold">frecuentes</span>
        </h2>
        <p class="section-subtitle">
          Todo lo que necesitas saber sobre Agentes Personalizados
        </p>
      </div>

      <div class="faq-list">
        {agent.faqs?.map((faq, index) => (
          <details class="faq-item">
            <summary class="faq-question">
              <span>{faq.question}</span>
              <ChevronDown className="faq-icon w-6 h-6" />
            </summary>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>

      <div class="faq-cta">
        <p>¿Tienes más preguntas sobre tu caso específico?</p>
        <a href={`${baseUrl}/contacto`} class="btn btn-secondary">
          Agendar consultoría gratuita
        </a>
      </div>
    </div>
  </section>

  <!-- NIVEL 7: FINAL CTA -->
  <section class="agent-section final-cta-section">
    <div class="ab-container">
      <div class="final-cta-content">
        <div class="cta-badge">
          <Rocket className="badge-icon w-4 h-4" />
          <span>Diseñado para ti</span>
        </div>

        <h2 class="cta-title">
          Construyamos tu <span class="text-gradient-gold">Agente Ideal</span>
        </h2>

        <p class="cta-subtitle">
          Consultoría inicial 100% gratuita. Te ayudamos a definir la solución perfecta para tu negocio, sin compromiso.
        </p>

        <div class="cta-process">
          <div class="process-step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h4>Agenda una llamada</h4>
              <p>30 minutos para entender tu necesidad</p>
            </div>
          </div>
          <div class="process-arrow">→</div>
          <div class="process-step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h4>Recibe propuesta</h4>
              <p>Diseño + timeline + presupuesto exacto</p>
            </div>
          </div>
          <div class="process-arrow">→</div>
          <div class="process-step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h4>Construimos juntos</h4>
              <p>Desarrollo iterativo con tu feedback</p>
            </div>
          </div>
        </div>

        <div class="cta-buttons">
          <a href={`${baseUrl}/contacto`} class="btn btn-primary btn-lg">
            Agendar consultoría gratuita
          </a>
          <a href={`${baseUrl}/demo`} class="btn btn-secondary btn-lg">
            Ver ejemplos de agentes
          </a>
        </div>

        <div class="cta-trust">
          <div class="trust-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 12L11 14L15 10" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="12" r="10" stroke="#00FF88" stroke-width="2"/>
            </svg>
            <span>Sin compromiso</span>
          </div>
          <div class="trust-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 12L11 14L15 10" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="12" r="10" stroke="#00FF88" stroke-width="2"/>
            </svg>
            <span>Consultoría gratuita</span>
          </div>
          <div class="trust-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 12L11 14L15 10" stroke="#00FF88" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="12" r="10" stroke="#00FF88" stroke-width="2"/>
            </svg>
            <span>Propuesta en 48h</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  /* Hero Personalizado */
  .agent-hero {
    background: linear-gradient(135deg, rgba(8, 8, 24, 0.95) 0%, rgba(26, 28, 30, 0.98) 100%);
    padding: 180px 0 80px;
    position: relative;
    overflow: hidden;
  }

  .agent-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 1000px;
    height: 1000px;
    background: radial-gradient(circle, rgba(200, 152, 40, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(200, 152, 40, 0.15);
    border: 1px solid rgba(200, 152, 40, 0.4);
    border-radius: 100px;
    font-size: 13px;
    font-weight: 700;
    color: #C89828;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 24px;
  }

  .hero-icon {
    font-size: 80px;
    line-height: 1;
    margin-bottom: 24px;
    filter: drop-shadow(0 4px 20px rgba(200, 152, 40, 0.4));
  }

  .hero-title {
    font-size: clamp(40px, 6vw, 64px);
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .hero-tagline {
    font-size: clamp(20px, 3vw, 28px);
    font-weight: 700;
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
  }

  .hero-description {
    font-size: 18px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 40px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-metrics {
    display: flex;
    justify-content: center;
    gap: 32px;
    margin-bottom: 48px;
    flex-wrap: wrap;
  }

  .metric-card {
    text-align: center;
    padding: 20px 32px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(200, 152, 40, 0.2);
    border-radius: 16px;
  }

  .metric-value {
    font-size: 36px;
    font-weight: 900;
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 8px;
  }

  .metric-label {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 600;
  }

  .hero-cta-box {
    max-width: 600px;
    margin: 0 auto;
    padding: 32px;
    background: rgba(200, 152, 40, 0.08);
    border: 1px solid rgba(200, 152, 40, 0.3);
    border-radius: 20px;
  }

  .cta-box-title {
    font-size: 20px;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 12px;
  }

  .cta-box-text {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 24px;
  }

  /* Sections */
  .agent-section {
    padding: 80px 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 64px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 900;
    margin-bottom: 16px;
    color: #FFFFFF;
  }

  .section-subtitle {
    font-size: 18px;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Pain Points Custom */
  .pain-section {
    background: rgba(8, 8, 24, 0.5);
  }

  .pain-grid-custom {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 48px;
  }

  .pain-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 20px;
    padding: 32px;
    transition: all 0.3s ease;
  }

  .pain-card:hover {
    border-color: rgba(255, 184, 0, 0.4);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(255, 184, 0, 0.15);
  }

  .pain-title {
    font-size: 20px;
    font-weight: 800;
    color: #FFFFFF;
    margin-bottom: 12px;
  }

  .pain-problem {
    font-size: 15px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 16px;
  }

  .pain-cost {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.3);
    border-radius: 10px;
  }

  .cost-value {
    font-size: 14px;
    font-weight: 700;
    color: #FFB800;
  }

  .pain-cta {
    text-align: center;
    padding: 32px;
    background: rgba(200, 152, 40, 0.08);
    border: 1px solid rgba(200, 152, 40, 0.3);
    border-radius: 20px;
  }

  .cta-text {
    font-size: 18px;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 20px;
  }

  /* Solutions */
  .solutions-list {
    display: flex;
    flex-direction: column;
    gap: 32px;
    margin-bottom: 64px;
  }

  .solution-card {
    display: flex;
    gap: 32px;
    padding: 40px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(200, 152, 40, 0.2);
    border-radius: 24px;
    transition: all 0.3s ease;
  }

  .solution-card:hover {
    border-color: rgba(200, 152, 40, 0.4);
    background: rgba(255, 255, 255, 0.05);
  }

  .solution-number {
    font-size: 48px;
    font-weight: 900;
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    flex-shrink: 0;
  }

  .solution-content {
    flex: 1;
  }

  .solution-title {
    font-size: 24px;
    font-weight: 800;
    color: #FFFFFF;
    margin-bottom: 12px;
  }

  .solution-description {
    font-size: 16px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 20px;
  }

  .solution-bullets {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .solution-bullets li {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.9);
  }

  /* Timeline */
  .timeline-section {
    padding: 48px 0;
    background: rgba(200, 152, 40, 0.03);
    border-radius: 24px;
  }

  .timeline-title {
    font-size: 24px;
    font-weight: 800;
    color: #FFFFFF;
    text-align: center;
    margin-bottom: 48px;
  }

  .timeline {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 48px;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .timeline-item {
    display: flex;
    gap: 24px;
    align-items: flex-start;
  }

  .timeline-marker {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    background: linear-gradient(135deg, #C89828 0%, #E0B84E 100%);
    color: #080818;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 900;
    box-shadow: 0 4px 16px rgba(200, 152, 40, 0.4);
  }

  .timeline-content h4 {
    font-size: 18px;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 8px;
  }

  .timeline-content p {
    font-size: 15px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  /* Use Cases Custom */
  .use-cases-grid-custom {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
