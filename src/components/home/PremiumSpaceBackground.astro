---
/**
 * PREMIUM SPACE BACKGROUND
 * Fondo astronómico épico con CSS puro (sin canvas)
 * Más confiable y performante
 */
---

<div class="premium-space-bg">
  <!-- Stars layers -->
  <div class="stars-layer stars-1"></div>
  <div class="stars-layer stars-2"></div>
  <div class="stars-layer stars-3"></div>
  
  <!-- Nebula effects -->
  <div class="nebula nebula-1"></div>
  <div class="nebula nebula-2"></div>
  <div class="nebula nebula-3"></div>
  
  <!-- Grid overlay -->
  <div class="tech-grid"></div>
  
  <!-- Particles -->
  <div class="particles">
    {[...Array(20)].map((_, i) => (
      <div class="particle" style={`--delay: ${i * 0.5}s; --duration: ${5 + i}s; --x: ${Math.random() * 100}%; --y: ${Math.random() * 100}%`}></div>
    ))}
  </div>
  
  <!-- Glow orbs -->
  <div class="glow-orbs">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>
  </div>
</div>

<style>
  .premium-space-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
  }

  /* Stars layers - Multiple depths */
  .stars-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-repeat: repeat;
    background-size: 200px 200px;
  }

  .stars-1 {
    background-image: 
      radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.8), transparent),
      radial-gradient(2px 2px at 60px 70px, rgba(255, 255, 255, 0.6), transparent),
      radial-gradient(1px 1px at 50px 50px, rgba(255, 255, 255, 0.4), transparent),
      radial-gradient(1px 1px at 130px 80px, rgba(255, 255, 255, 0.5), transparent),
      radial-gradient(2px 2px at 90px 10px, rgba(255, 255, 255, 0.7), transparent);
    animation: twinkle 4s ease-in-out infinite;
  }

  .stars-2 {
    background-image: 
      radial-gradient(1px 1px at 40px 60px, rgba(200, 152, 40, 0.8), transparent),
      radial-gradient(1px 1px at 110px 90px, rgba(200, 152, 40, 0.6), transparent),
      radial-gradient(1px 1px at 150px 30px, rgba(255, 215, 110, 0.5), transparent),
      radial-gradient(2px 2px at 70px 140px, rgba(200, 152, 40, 0.7), transparent);
    animation: twinkle 6s ease-in-out infinite 1s;
  }

  .stars-3 {
    background-image: 
      radial-gradient(1px 1px at 100px 120px, rgba(255, 255, 255, 0.3), transparent),
      radial-gradient(1px 1px at 30px 100px, rgba(255, 255, 255, 0.4), transparent),
      radial-gradient(1px 1px at 160px 60px, rgba(255, 255, 255, 0.35), transparent);
    animation: twinkle 8s ease-in-out infinite 2s;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  /* Nebula effects - Glowing clouds */
  .nebula {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .nebula-1 {
    top: 10%;
    left: 10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(200, 152, 40, 0.4), transparent);
    animation-delay: 0s;
  }

  .nebula-2 {
    top: 50%;
    right: 10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 184, 0, 0.3), transparent);
    animation-delay: -7s;
  }

  .nebula-3 {
    bottom: 10%;
    left: 40%;
    width: 450px;
    height: 450px;
    background: radial-gradient(circle, rgba(200, 152, 40, 0.25), transparent);
    animation-delay: -14s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  /* Tech grid */
  .tech-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(200, 152, 40, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(200, 152, 40, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    animation: grid-move 20s linear infinite;
  }

  @keyframes grid-move {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(60px, 60px);
    }
  }

  /* Particles - Floating dots */
  .particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(200, 152, 40, 0.8);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(200, 152, 40, 0.8);
    left: var(--x);
    top: var(--y);
    animation: particle-float var(--duration) ease-in-out infinite;
    animation-delay: var(--delay);
    opacity: 0;
  }

  @keyframes particle-float {
    0%, 100% {
      opacity: 0;
      transform: translateY(0);
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100vh);
    }
  }

  /* Glow orbs - Big ambient lights */
  .glow-orbs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.15;
  }

  .orb-1 {
    top: 20%;
    left: 20%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 184, 0, 0.6), transparent);
    animation: pulse-glow 8s ease-in-out infinite;
  }

  .orb-2 {
    bottom: 20%;
    right: 20%;
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(200, 152, 40, 0.5), transparent);
    animation: pulse-glow 10s ease-in-out infinite 2s;
  }

  .orb-3 {
    top: 60%;
    left: 50%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 215, 110, 0.4), transparent);
    animation: pulse-glow 12s ease-in-out infinite 4s;
  }

  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.15;
      transform: scale(1);
    }
    50% {
      opacity: 0.25;
      transform: scale(1.2);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nebula {
      filter: blur(60px);
    }

    .nebula-1,
    .nebula-2,
    .nebula-3 {
      width: 300px;
      height: 300px;
    }

    .orb {
      filter: blur(80px);
    }

    .orb-1,
    .orb-2,
    .orb-3 {
      width: 250px;
      height: 250px;
    }

    .tech-grid {
      background-size: 40px 40px;
    }
  }

  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    .stars-layer,
    .nebula,
    .tech-grid,
    .particle,
    .orb {
      animation: none !important;
    }
  }
</style>
