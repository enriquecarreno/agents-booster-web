---
/**
 * TECH GRID BACKGROUND
 * Grid animado estilo Vercel/Linear
 */
---

<div class="tech-grid">
  <div class="grid-container">
    <div class="grid-lines horizontal"></div>
    <div class="grid-lines vertical"></div>
  </div>
  <div class="grid-glow"></div>
</div>

<style>
  .tech-grid {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  .grid-container {
    position: absolute;
    inset: 0;
    opacity: 0.4;
  }

  .grid-lines {
    position: absolute;
    inset: 0;
  }

  .grid-lines.horizontal {
    background-image: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 79px,
      rgba(255, 184, 0, 0.1) 79px,
      rgba(255, 184, 0, 0.1) 80px
    );
    animation: grid-scan-horizontal 20s linear infinite;
  }

  .grid-lines.vertical {
    background-image: repeating-linear-gradient(
      90deg,
      transparent,
      transparent 79px,
      rgba(255, 184, 0, 0.1) 79px,
      rgba(255, 184, 0, 0.1) 80px
    );
    animation: grid-scan-vertical 25s linear infinite;
  }

  .grid-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 800px;
    height: 800px;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle,
      rgba(255, 184, 0, 0.15) 0%,
      rgba(176, 38, 255, 0.08) 40%,
      transparent 70%
    );
    animation: pulse-glow 8s ease-in-out infinite;
  }

  @keyframes grid-scan-horizontal {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(80px);
    }
  }

  @keyframes grid-scan-vertical {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(80px);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.3;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.6;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .grid-lines,
    .grid-glow {
      animation: none;
    }
  }
</style>
