  .glow-2 {
    width: 600px;
    height: 600px;
    top: 50%;
    right: 5%;
    background: radial-gradient(circle, rgba(255,237,78,0.15) 0%, transparent 70%);
    animation-delay: 2s;
  }
  
  .glow-3 {
    width: 400px;
    height: 400px;
    bottom: 20%;
    left: 40%;
    background: radial-gradient(circle, rgba(255,184,0,0.18) 0%, transparent 70%);
    animation-delay: 4s;
  }

  @keyframes cosmicPulse {
    0%, 100% {
      opacity: 0;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }
  
  /* Early Access Banner */
