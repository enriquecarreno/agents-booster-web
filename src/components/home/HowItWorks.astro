<style>
  .how-it-works {
    padding: var(--space-5xl) 0;
    background: linear-gradient(180deg, #050508 0%, #0D0D10 50%, #050508 100%);
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-5xl);
  }

  .badge-cosmic {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.3);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 700;
    color: #FFB800;
    margin-bottom: var(--space-l);
  }

  .section-title {
    font-size: clamp(32px, 5vw, 56px);
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: var(--space-m);
    color: #FFFFFF;
  }

  .section-subtitle {
    font-size: 18px;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Timeline */
  .timeline {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 40px;
    margin-bottom: 80px;
    opacity: 0.3;
    transition: opacity 0.6s ease;
  }

  .timeline-item.active {
    opacity: 1;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  /* Marker */
  .timeline-marker {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
  }

  .marker-number {
    position: relative;
    z-index: 2;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 184, 0, 0.1);
    border: 2px solid rgba(255, 184, 0, 0.3);
    border-radius: 50%;
    font-size: 20px;
    font-weight: 900;
    color: #FFB800;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item.active .marker-number {
    background: linear-gradient(135deg, #FFB800, #FFD700);
    border-color: #FFB800;
    color: #000;
    box-shadow: 0 0 30px rgba(255, 184, 0, 0.6);
    transform: scale(1.1);
  }

  .marker-glow {
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle, rgba(255, 184, 0, 0.3), transparent);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .timeline-item.active .marker-glow {
    opacity: 1;
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  /* Line */
  .timeline-line {
    position: absolute;
    top: 80px;
    left: 39px;
    width: 2px;
    height: calc(100% - 80px);
    background: linear-gradient(
      to bottom,
      rgba(255, 184, 0, 0.5),
      rgba(255, 184, 0, 0.1)
    );
  }

  .timeline-item:last-child .timeline-line {
    display: none;
  }

  /* Content */
  .timeline-content {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 32px;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item.active .timeline-content {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 184, 0, 0.3);
    transform: translateX(10px);
    box-shadow: 0 8px 32px rgba(255, 184, 0, 0.2);
  }

  .timeline-icon {
    font-size: 48px;
    margin-bottom: 16px;
    display: inline-block;
    transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .timeline-item.active .timeline-icon {
    transform: scale(1.2) rotate(10deg);
  }

  .timeline-title {
    font-size: 24px;
    font-weight: 800;
    margin-bottom: 12px;
    color: #FFFFFF;
  }

  .timeline-description {
    font-size: 16px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 24px;
  }

  /* Visuals */
  .timeline-visual {
    margin-top: 24px;
  }

  .agent-preview {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .agent-chip {
    padding: 10px 16px;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    color: #FFB800;
    transition: all 0.3s ease;
  }

  .timeline-item.active .agent-chip {
    animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    animation-fill-mode: both;
  }

  .timeline-item.active .agent-chip:nth-child(1) { animation-delay: 0.1s; }
  .timeline-item.active .agent-chip:nth-child(2) { animation-delay: 0.2s; }
  .timeline-item.active .agent-chip:nth-child(3) { animation-delay: 0.3s; }

  @keyframes bounce-in {
    0% {
      opacity: 0;
      transform: scale(0.3);
    }
    50% {
      transform: scale(1.05);
    }
    70% {
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .integrations-flow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
  }

  .integration-node {
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
  }

  .integration-node.central {
    background: rgba(255, 184, 0, 0.15);
    border-color: rgba(255, 184, 0, 0.4);
    color: #FFB800;
  }

  .flow-arrow {
    font-size: 20px;
    color: rgba(255, 184, 0, 0.6);
  }

  .training-progress {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .progress-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .progress-label {
    font-size: 14px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
    min-width: 80px;
  }

  .progress-bar {
    flex: 1;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #FFB800, #FFD700);
    border-radius: 4px;
    transition: width 1s ease;
  }

  .timeline-item.active .progress-fill {
    animation: fill-progress 1.5s ease-out;
  }

  @keyframes fill-progress {
    from { width: 0 !important; }
  }

  .live-stats {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .live-stat {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    color: #00FF88;
  }

  .live-icon {
    font-size: 18px;
  }

  /* CTA */
  .how-cta {
    text-align: center;
    margin-top: var(--space-5xl);
  }

  .how-cta-text {
    font-size: 20px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-l);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .timeline-item {
      grid-template-columns: 60px 1fr;
      gap: 20px;
      margin-bottom: 60px;
    }

    .timeline-marker {
      width: 60px;
      height: 60px;
    }

    .marker-number {
      width: 50px;
      height: 50px;
      font-size: 16px;
    }

    .timeline-line {
      left: 29px;
    }

    .timeline-content {
      padding: 24px;
    }

    .timeline-item.active .timeline-content {
      transform: translateX(0);
    }

    .integrations-flow {
      flex-direction: column;
    }

    .flow-arrow {
      transform: rotate(90deg);
    }
  }
</style>

<script>
  // Intersection Observer for timeline animations
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '-100px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
        }
      });
    }, observerOptions);

    document.addEventListener('DOMContentLoaded', () => {
      const items = document.querySelectorAll('.timeline-item');
      items.forEach(item => observer.observe(item));
    });
  }
</script>
