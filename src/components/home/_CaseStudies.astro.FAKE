            <div class="section-label">
              <span class="label-icon">üí°</span>
              <span class="label-text">Soluci√≥n</span>
            </div>
            <p class="section-text">{caseItem.solution}</p>
          </div>

          <!-- Results Grid -->
          <div class="case-section">
            <div class="section-label">
              <span class="label-icon">üìà</span>
              <span class="label-text">Resultados</span>
            </div>
            <div class="results-grid">
              {caseItem.results.map((result) => (
                <div class="result-item">
                  <div class="result-icon">{result.icon}</div>
                  <div class="result-label">{result.label}</div>
                  <div class="result-comparison">
                    <div class="result-before">
                      <span class="result-label-mini">Antes</span>
                      <span class="result-value-before">{result.before}</span>
                    </div>
                    <div class="result-arrow">‚Üí</div>
                    <div class="result-after">
                      <span class="result-label-mini">Despu√©s</span>
                      <span class="result-value-after">{result.after}</span>
