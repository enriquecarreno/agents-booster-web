<style>
  .case-studies-section {
    background: linear-gradient(180deg, #080818 0%, #0d0d1f 100%);
    position: relative;
    overflow: hidden;
  }

  .case-studies-section::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1400px;
    height: 1400px;
    background: radial-gradient(circle, rgba(200, 152, 40, 0.04) 0%, transparent 70%);
    pointer-events: none;
  }

  /* Header */
  .case-studies-header {
    text-align: center;
    margin-bottom: 64px;
    position: relative;
    z-index: 2;
  }

  .case-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(200, 152, 40, 0.12);
    border: 1px solid rgba(200, 152, 40, 0.3);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 700;
    color: #C89828;
    margin-bottom: 24px;
  }

  .badge-icon {
    font-size: 18px;
  }

  .case-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .title-highlight {
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .case-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Cases Grid */
  .cases-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 80px;
    position: relative;
    z-index: 2;
  }

  .case-card {
    padding: 40px;
    background: rgba(8, 8, 24, 0.6);
    border: 1px solid rgba(200, 152, 40, 0.15);
    border-radius: 24px;
    backdrop-filter: blur(16px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .case-card:hover {
    background: rgba(8, 8, 24, 0.8);
    border-color: rgba(200, 152, 40, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 48px rgba(200, 152, 40, 0.15);
  }

  /* Case Header */
  .case-header {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .case-logo {
    font-size: 56px;
    filter: drop-shadow(0 4px 8px rgba(200, 152, 40, 0.3));
  }

  .case-meta {
    flex: 1;
    min-width: 200px;
  }

  .case-company {
    font-size: 28px;
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 8px;
  }

  .case-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
  }

  .info-divider {
    color: rgba(255, 255, 255, 0.3);
  }

  .case-agent-badge {
    padding: 8px 16px;
    background: rgba(200, 152, 40, 0.15);
    border: 1px solid rgba(200, 152, 40, 0.3);
    border-radius: 100px;
    font-size: 13px;
    font-weight: 700;
    color: #C89828;
    white-space: nowrap;
  }

  /* Case Sections */
  .case-section {
    margin-bottom: 32px;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .label-icon {
    font-size: 20px;
  }

  .label-text {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.6);
  }

  .section-text {
    font-size: 16px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Results Grid */
  .results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .result-item {
    padding: 20px;
    background: rgba(8, 8, 24, 0.6);
    border: 1px solid rgba(200, 152, 40, 0.15);
    border-radius: 16px;
  }

  .result-icon {
    font-size: 28px;
    margin-bottom: 12px;
  }

  .result-label {
    font-size: 13px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .result-comparison {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .result-before,
  .result-after {
    flex: 1;
    text-align: center;
  }

  .result-label-mini {
    display: block;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 4px;
    font-weight: 700;
  }

  .result-value-before {
    display: block;
    font-size: 18px;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.5);
  }

  .result-value-after {
    display: block;
    font-size: 20px;
    font-weight: 900;
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .result-arrow {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.4);
  }

  /* Quote */
  .case-quote {
    padding: 24px;
    background: rgba(200, 152, 40, 0.08);
    border: 1px solid rgba(200, 152, 40, 0.2);
    border-radius: 16px;
    margin-bottom: 24px;
    position: relative;
  }

  .quote-mark {
    font-size: 48px;
    font-weight: 900;
    color: rgba(200, 152, 40, 0.3);
    line-height: 1;
    margin-bottom: 12px;
    font-family: Georgia, serif;
  }

  .quote-text {
    font-size: 16px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    font-style: italic;
    margin-bottom: 20px;
  }

  .quote-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #C89828 0%, #F4D56E 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-weight: 800;
    color: #080818;
  }

  .author-name {
    font-size: 15px;
    font-weight: 700;
    color: #FFFFFF;
  }

  .author-role {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Timeline */
  .case-timeline {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: rgba(0, 255, 136, 0.08);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 12px;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.8);
  }

  .timeline-icon {
    font-size: 20px;
  }

  .timeline-text strong {
    color: #00FF88;
    font-weight: 700;
  }

  /* CTA */
  .case-studies-cta {
    text-align: center;
    padding: 48px 40px;
    background: rgba(200, 152, 40, 0.08);
    border: 2px solid rgba(200, 152, 40, 0.3);
    border-radius: 24px;
    position: relative;
    z-index: 2;
  }

  .cta-title {
    font-size: 32px;
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 12px;
  }

  .cta-text {
    font-size: 17px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 32px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 700;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: linear-gradient(135deg, #C89828 0%, #E0B84E 100%);
    color: #080818;
    box-shadow: 0 4px 16px rgba(200, 152, 40, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(200, 152, 40, 0.5);
    color: #080818;
  }

  .btn-secondary {
    background: rgba(8, 8, 24, 0.6);
    border: 2px solid rgba(200, 152, 40, 0.3);
    color: #FFFFFF;
  }

  .btn-secondary:hover {
    background: rgba(200, 152, 40, 0.15);
    border-color: rgba(200, 152, 40, 0.6);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .results-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .case-studies-header {
      margin-bottom: 48px;
    }

    .cases-grid {
      gap: 32px;
      margin-bottom: 64px;
    }

    .case-card {
      padding: 28px 24px;
    }

    .case-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .case-logo {
      font-size: 48px;
    }

    .case-company {
      font-size: 24px;
    }

    .case-agent-badge {
      width: 100%;
      text-align: center;
    }

    .quote-mark {
      font-size: 40px;
    }

    .quote-text {
      font-size: 15px;
    }

    .case-studies-cta {
      padding: 32px 24px;
    }

    .cta-title {
      font-size: 24px;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }

    .cta-btn {
      width: 100%;
    }
  }
</style>
