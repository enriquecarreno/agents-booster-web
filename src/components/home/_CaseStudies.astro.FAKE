                {caseItem.author.split(' ').map(n => n[0]).join('')}
              </div>
              <div class="author-details">
                <div class="author-name">{caseItem.author}</div>
                <div class="author-role">{caseItem.role}, {caseItem.company}</div>
              </div>
            </div>
          </div>

          <!-- Timeline -->
          <div class="case-timeline">
            <span class="timeline-icon">‚è±Ô∏è</span>
