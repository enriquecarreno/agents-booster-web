        </div>

        <!-- Agentes Column -->
        <div class="footer-column">
          <h4 class="footer-column-title">Agentes</h4>
          <ul class="footer-links">
            <li><a href={`${baseUrl}/agentes/vendedor`}>Agente de Ventas</a></li>
            <li><a href={`${baseUrl}/agentes/soporte`}>Agente de Soporte</a></li>
            <li><a href={`${baseUrl}/agentes/operaciones`}>Agente de Operaciones</a></li>
            <li><a href={`${baseUrl}/agentes/personalizado`}>Agente Personalizado</a></li>
          </ul>
        </div>

        <!-- Empresa Column -->
        <div class="footer-column">
          <h4 class="footer-column-title">Empresa</h4>
          <ul class="footer-links">
            <li><a href={`${baseUrl}/planes`}>Planes y Precios</a></li>
            <li><a href={`${baseUrl}/demo`}>Ver Demo</a></li>
