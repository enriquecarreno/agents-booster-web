---
/**
 * STICKY CTA BAR V2
 * Con WhatsApp, mejores animaciones, sin emojis
 */
import { baseUrl } from '../../lib/base-url';
import { Gift, Play, MessageCircle, Calendar } from 'lucide-react';
---

<div class="sticky-cta-bar" id="stickyCTA">
  <div class="sticky-container">
    <div class="sticky-content">
      <div class="sticky-text">
        <span class="sticky-badge">
          <Gift size={14} strokeWidth={2.5} className="badge-icon-lucide" client:load />
          <span>Implementación GRATIS</span>
        </span>
        <span class="sticky-title">Inicia tu Piloto Hoy</span>
      </div>
      <div class="sticky-actions">
        <a 
          href="https://wa.me/598981415019?text=Hola,%20quiero%20iniciar%20mi%20piloto%20de%20IA" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn-sticky-whatsapp"
          aria-label="Contactar por WhatsApp"
        >
          <MessageCircle size={18} strokeWidth={2.5} client:load />
          WhatsApp
        </a>
        <a href={`${baseUrl}/demo`} class="btn-sticky-primary">
          <Play size={18} strokeWidth={2.5} client:load />
          Ver Demo
          <span class="arrow">→</span>
        </a>
        <a href={`${baseUrl}/contacto`} class="btn-sticky-secondary">
          <Calendar size={18} strokeWidth={2.5} client:load />
          Agendar
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Show/hide sticky bar based on scroll
  let lastScroll = 0;
  const stickyBar = document.getElementById('stickyCTA');
  const finalCTA = document.querySelector('.final-cta-section');

  if (stickyBar && finalCTA) {
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      const finalCTAPosition = finalCTA.getBoundingClientRect().top + window.pageYOffset;
      const windowBottom = window.pageYOffset + window.innerHeight;

      // Show if scrolled down 600px and before final CTA
      if (currentScroll > 600 && windowBottom < finalCTAPosition - 200) {
        stickyBar.classList.add('visible');
      } else {
        stickyBar.classList.remove('visible');
      }

      lastScroll = currentScroll;
    });
  }
</script>

<style>
  .sticky-cta-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(8, 8, 24, 0.98);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border-top: 1px solid rgba(200, 152, 40, 0.3);
    box-shadow: 
      0 -4px 24px rgba(0, 0, 0, 0.4),
      0 -2px 16px rgba(200, 152, 40, 0.1);
    z-index: 100;
    transform: translateY(120%);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sticky-cta-bar.visible {
    transform: translateY(0);
    animation: slideUpBounce 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes slideUpBounce {
    0% {
      transform: translateY(120%);
    }
    60% {
      transform: translateY(-8px);
    }
    80% {
      transform: translateY(4px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .sticky-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 14px 24px;
  }

  .sticky-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
  }

  .sticky-text {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .sticky-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    font-weight: 700;
    padding: 6px 12px;
    background: rgba(200, 152, 40, 0.15);
    border: 1px solid rgba(200, 152, 40, 0.4);
    border-radius: 100px;
    color: #C89828;
    white-space: nowrap;
    animation: pulseBadge 2s ease-in-out infinite;
  }

  .sticky-badge :global(.badge-icon-lucide) {
    color: #C89828;
    flex-shrink: 0;
  }

  @keyframes pulseBadge {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(200, 152, 40, 0.4);
    }
    50% {
      box-shadow: 0 0 0 6px rgba(200, 152, 40, 0);
    }
  }

  .sticky-title {
    font-size: 16px;
    font-weight: 700;
    color: #FFFFFF;
    white-space: nowrap;
  }

  .sticky-actions {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* WhatsApp Button */
  .btn-sticky-whatsapp {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 11px 20px;
    background: #25D366;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 700;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
  }

  .btn-sticky-whatsapp:hover {
    background: #20BA5A;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.5);
    color: #FFFFFF;
  }

  .btn-sticky-whatsapp :global(svg) {
    color: #FFFFFF;
    flex-shrink: 0;
  }

  /* Primary Button */
  .btn-sticky-primary {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 11px 20px;
    background: linear-gradient(135deg, #C89828 0%, #E0B84E 100%);
    color: #080818;
    font-size: 14px;
    font-weight: 700;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 12px rgba(200, 152, 40, 0.3);
  }

  .btn-sticky-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(200, 152, 40, 0.5);
    color: #080818;
  }

  .btn-sticky-primary :global(svg) {
    color: #080818;
    flex-shrink: 0;
  }

  .btn-sticky-primary .arrow {
    transition: transform 0.3s ease;
    font-size: 16px;
    line-height: 1;
  }

  .btn-sticky-primary:hover .arrow {
    transform: translateX(4px);
  }

  /* Secondary Button */
  .btn-sticky-secondary {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 11px 20px;
    background: transparent;
    border: 2px solid rgba(200, 152, 40, 0.4);
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 700;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .btn-sticky-secondary:hover {
    background: rgba(200, 152, 40, 0.1);
    border-color: rgba(200, 152, 40, 0.6);
    transform: translateY(-2px);
  }

  .btn-sticky-secondary :global(svg) {
    color: #C89828;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .sticky-actions {
      gap: 8px;
    }

    .btn-sticky-whatsapp,
    .btn-sticky-primary,
    .btn-sticky-secondary {
      padding: 10px 16px;
      font-size: 13px;
    }

    .btn-sticky-whatsapp :global(svg),
    .btn-sticky-primary :global(svg),
    .btn-sticky-secondary :global(svg) {
      width: 16px;
      height: 16px;
    }
  }

  @media (max-width: 768px) {
    .sticky-container {
      padding: 12px 16px;
    }

    .sticky-content {
      flex-direction: column;
      gap: 12px;
      align-items: stretch;
    }

    .sticky-text {
      flex-direction: column;
      gap: 6px;
      text-align: center;
      align-items: center;
    }

    .sticky-badge {
      font-size: 12px;
      padding: 5px 10px;
    }

    .sticky-title {
      font-size: 14px;
    }

    .sticky-actions {
      width: 100%;
      gap: 8px;
    }

    .btn-sticky-whatsapp {
      flex: 1;
      justify-content: center;
      font-size: 13px;
      padding: 12px 16px;
    }

    .btn-sticky-primary,
    .btn-sticky-secondary {
      display: none; /* Solo WhatsApp en mobile */
    }
  }

  @media (max-width: 400px) {
    .btn-sticky-whatsapp {
      font-size: 14px;
      padding: 13px 20px;
    }

    .btn-sticky-whatsapp :global(svg) {
      width: 18px;
      height: 18px;
    }
  }
</style>
